    + _id?: string
    + __v?: number
    + createdAt?: Date
    + updatedAt?: Date
    + titel: string
    + bewertung?: number
    + genre?: Genre
    + produktionsStudio: ProduktionsStudio
    + preis: number
    + rabatt?: number
    + verfuegbarkeit?: boolean
    + veroeffentlichung?: Date
    + beschreibung: string
    + website?: string
    + schauspieler?: Array<string>
